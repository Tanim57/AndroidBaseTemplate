<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tanim.androidbasetemplate.core.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragnent_login">

        <action android:id="@+id/action_navigate_home"
            app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tanim.androidbasetemplate.core.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home"/>


</navigation>