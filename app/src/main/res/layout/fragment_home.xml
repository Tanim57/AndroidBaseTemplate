<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWorldMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".3"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/world_map"/>


        <TextView
            android:id="@+id/tvWorldMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivWorldMap"
            app:layout_constraintVertical_bias=".025"
            android:gravity="center"
            android:text="World Map"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWorldMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvWorldMap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Compress"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCompressWorldMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btnWorldMap"
            app:layout_constraintHeight_percent=".3"/>

        <TextView
            android:id="@+id/tvCompressWorldMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivCompressWorldMap"
            app:layout_constraintVertical_bias=".025"
            android:gravity="center"
            android:visibility="gone"
            android:text="Compress World Map"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>